<% include _layouts/header %>
<html>
<head>
<style media="screen">
  html,body{
    width: 100%;
    height: 100%;
    margin: 0px;
    padding: 0px;
    overflow-x: hidden;

  }
</style>
</head>
<body>
<a href="/" class="btn btn-secondary" style="float:right;">Go back</a>

<div class="row top-row">
  <h1 class="page-header">
    <%= p.title %>
  </h1>
</div>
<div class="row top-row">
  <div class="col-xs-12 col-md-5">
    <img src="/product-images/<%= p.id %>/<%= p.image %>" alt="" class="spi">
    <br>
  </div>
  <div class="col-xs-12 col-md-6">
    <p class="spi-desc">
      <%= p.desc %>
    </p>
    <p class="price">Price:
      <%= parseFloat(p.price).toFixed(2) %>/-
    </p>
    <% if(loggedIn) { %>
    <p><a href="/cart/add/<%= p.slug %>" class="vd">Add to cart &raquo;</a></p>
    <% } else { %>
    <p>You must be logged in to purchase items.</p>
    <% }; %>
  </div>
  <div class="col-xs-12">
    <ul class="gallery">
      <% galleryImages.forEach(function(image) { %>
      <% if(image != 'thumbs') { %>
      <li>
        <a data-fancybox="gallery" href="/product-images/<%= p.id %>/gallery/<%= image %>">
          <img src="/product-images/<%= p.id %>/gallery/thumbs/<%= image %>" alt="">
        </a>
      </li>
      <% } %>
      <% }); %>
    </ul>
  </div>


</div>
</body>
</html>

<% include _layouts/footer %>
